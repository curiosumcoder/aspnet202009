<tbody id="result">
    @foreach (var item in Model.Items)
    {
        <tr>
            <td>
                @item.CategoryName
            </td>
            <td>
                @item.Description
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
            </td>
        </tr>
    }
</tbody>
<tfoot id="result">
    <tr>
        <td colspan="2">
            <ul class="pagination">
                @for (int i = 1; i <= Model.Paging.PageCount; i++)
                {
                    <li class="page-item @(i == Model.Paging.Page ? "active" : "")"><button class="page-link" data-page="@i" data-command="paging">@i</button></li>
                }
            </ul>
        </td>
        <td>Resultados: @Model.Paging.Count</td>
    </tr>
</tfoot>